<main>

     {{#if err}}
        {{err}}
    {{/if}}

<div class="container">
    <h2 class="display-1 text-center">Event Registration Form</h2>
    <form id="Ingredientchecker" name="Ingredientchecker" action="/eventregistration" method="POST" >
        <div class="form-group row">
        <label for = "Event_Name" class="col-sm-2 col-form-label">Name of the event</label>
        <div class="col-sm-10">
        <input type="textbox" name="EventName" id="EventName" class="form-control" placeholder="Name of the event"><br>
        </div></div>

        <div class="form-group row">
        <label for = "Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
        <input type="textbox" name="Description" id="Description" class="form-control" placeholder="Description"><br>
        </div></div>

        <div class="form-group row">
        <label for = "Location" class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10">
        <input type="textbox" name="Location" id="Location" class="form-control" placeholder="Location"><br>
        </div></div>

        <div class="form-group row">
        <label for = "Category" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
        <input type="textbox" name="Category" id="Category" class="form-control" placeholder="Category"><br>
        </div></div>

        <div class="form-group row">
        <label for = "DateofEvent" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
        <input type="date" name="DateofEvent" id="DateofEvent" class="form-control" placeholder="Date"><br>
        </div></div>

        <center><input type="submit" value="ADD EVENT" /></center>
    </form>
</div>

</main>