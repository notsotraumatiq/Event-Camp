<main>
    <div class="container">
    <h2 class="display-1 text-center">Registration Form</h2>
    <p class="display-4 text-center">Please register yourself..!!</p>

    {{#if err}}
    {{err}}
    {{/if}}
    
    <form method='post', action='/register',enctype='multipart/form-data'> 
        <div class="form-group row">
        <label for="fname" class="col-sm-2 col-form-label"> First Name  </label> 
        <div class="col-sm-10">
        <input type="textbox" name="fname" id="fname" placeholder='Enter First Name' class="form-control"><br>
        </div></div>

        <div class="form-group row">
        <label for="lname" class="col-sm-2 col-form-label"> Last Name  </label> 
        <div class="col-sm-10">
        <input type="textbox" name="lname" id="lname" placeholder='Enter Last Name' class="form-control"><br>
        </div></div>

        <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label"> Email  </label> 
        <div class="col-sm-10">
        <input type="email" name="email" id="email" placeholder='Enter your email addrrss' class="form-control"><br>
        </div></div>


        <div class="form-group row">
        <label for="uname" class="col-sm-2 col-form-label"> User Name  </label> 
        <div class="col-sm-10">
        <input type="textbox" name="uname" id="uname" placeholder='Enter User Name' class="form-control"><br>
        </div></div>


        <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label"> Password  </label> 
        <div class="col-sm-10">
        <input type="password" name="password" id="passsword" placeholder='Enter Password' class="form-control"><br>
        </div></div>


        <div class="form-group row">
        <label for="cpassword" class="col-sm-2 col-form-label"> Confirm Password  </label> 
        <div class="col-sm-10">
        <input type="password" name="cpassword" id="cpasssword" placeholder='Confirm Password' class="form-control"><br>
        </div></div>


        <div class="form-group row">
        <label for="dob" class="col-sm-2 col-form-label"> Date of Birth  </label> 
        <div class="col-sm-10">
        <input type="date" name="dob" id="dob" placeholder='Enter Date of birth' class="form-control"><br>
        </div></div>


        <div class="form-group row">        
        <label for="pnumber" class="col-sm-2 col-form-label"> Phone number  </label> 
        <div class="col-sm-10">
        <input type="tel" pattern="[0-9]{10}" name="pnumber" id="pnumber" placeholder='Enter Phone Number. e.g 5516893219' class="form-control"><br>
        </div></div>

        <center><input type="submit" value="Register" /></center>
    

    </form>

    

    </div>
</main> 