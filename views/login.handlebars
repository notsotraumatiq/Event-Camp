<main>
    
    <div class="login-background">
        
    </div>

    <div class="login-content">
    <div class="container align-items-center">
        <h2 class="display-1 text-center">Login</h2>
        <p class="text-center">Please log in using the form below</p>
        
        <form method='post', action='/login',enctype='multipart/form-data'> 
            <div class="form-group row">
            <label for="fname" class="col-sm-2 col-form-label"> UserName  </label> 
            <div class="col-sm-10">
            <input type="textbox" name="uname" id="uname" placeholder='Enter User Name' class="form-control"><br>
            </div></div>

            <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label"> Password  </label> 
            <div class="col-sm-10">
            <input type="password" name="password" id="passsword" placeholder='Enter Password' class="form-control"><br>
            </div></div>
            <center><input type="submit" value="Log In" /></center>  <br><br>
            </div>
        </form>

        <p class="text-center">If you dont have account, Please Register yourself</p>
        {{#if err}}
        {{err}}
        {{/if}}

    </div>
    </div>
    
</main> 